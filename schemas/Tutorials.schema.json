{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Tutorials",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": { "type": "string", "description": "The Tutorial's entry name." },
      "civilopediaText": { "$ref": "CivilopediaText.schema.json" },
      "steps": {
        "type": "array",
        "items": { "type": "string" },
        "description": "An array of step descriptions for the tutorial."
      },
      "uniques": { "$ref": "Uniques.schema.json" }
    },
    "required": ["name"],
    "additionalProperties": false
  }
}
