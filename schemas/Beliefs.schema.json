{
  "$id": "https://raw.githubusercontent.com/RobLoach/vscode-unciv/refs/heads/master/schemas/Beliefs.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Beliefs",
  "description": "Beliefs that can be chosen for religions.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name",
        "description": "The name of the Belief."
      },
      "type": {
        "enum": ["Pantheon", "Founder", "Follower", "Enhancer"],
        "default": "Pantheon"
      },
      "uniques": {
        "$ref": "Uniques.schema.json"
      },
      "civilopediaText": {
        "$ref": "CivilopediaText.schema.json"
      }
    },
    "required": ["name", "type"],
    "additionalProperties": false
  }
}
