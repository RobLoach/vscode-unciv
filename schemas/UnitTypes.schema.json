{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "UnitTypes",
  "description": "A list of unit types, including their movement type and associated uniques.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name",
        "description": "The name of the unit type."
      },
      "movementType": {
        "enum": ["Land", "Water", "Air"],
        "default": "Land"
      },
      "uniques": { "$ref": "Uniques.schema.json" },
      "civilopediaText": { "$ref": "CivilopediaText.schema.json" }
    },
    "required": ["name", "movementType"],
    "additionalProperties": false
  }
}
