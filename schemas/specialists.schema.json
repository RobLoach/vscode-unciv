{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Specialists",
    "description": "A list of specialist types, including their stats and great person points.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": { "type": "string" },

            "production": { "type": "number" },
            "food": { "type": "number" },
            "gold": { "type": "number" },
            "science": { "type": "number" },
            "culture": { "type": "number" },
            "happiness": { "type": "number" },
            "faith": { "type": "number" },

            "color": { "$ref": "color.schema.json" },

            "greatPersonPoints": {
                "type": "object",
                "additionalProperties": {
                    "type": "integer"
                }
            }
        },
        "required": ["name", "color"],
        "additionalProperties": false
    }
}
